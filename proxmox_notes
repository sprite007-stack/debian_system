#Backing up LXCs and VMs to synods2422
zdump 100 --mode snapshot --compress zstd --dumpdir /mnt/pve/storage/synods2422/proxmox_backup

#Restoring LXCs and VMs from Backup to the local-lvm
pct restore 100 /mnt/pve/storage/synods2422/proxmox_backup/vzdump-lxc-100-2025_09_01-22_07_36.tar.zst --storage local-lvm


